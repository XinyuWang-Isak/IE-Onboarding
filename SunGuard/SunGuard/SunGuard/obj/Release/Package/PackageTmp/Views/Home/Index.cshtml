</script>
<script>
    function cityChange() {
        var city = document.getElementById("city").value
        var lat;
        var lon;
        console.log(city);
        switch (city) {
            case "01":
                var lat = -37.50;
                var lon = 144.58;
                break;
            default:
                var lat = 0;
                var lon = 0;
                break;
        }
        console.log(city, lat, lon);

        var formData = $("#userForm").serializeArray();
        var openWeatherKey = '7115bf7080638179d997a846b0ffafea';
        $.ajax({
            url: `https://api.openweathermap.org/data/3.0/onecall?lat=${lat}&lon=${lon}&appid=${openWeatherKey}&callback=weather`,
            type: "GET",
            data: formData,
            dataType: "jsonp",
            jsonpCallback: "weather"
        });
    }
    function weather(json) {
        console.log(json["current"]["uvi"]);
        var uvi = json["current"]["uvi"];
        document.getElementById("uvi").innerHTML = uvi;

    }
</script>
